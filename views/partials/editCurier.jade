#pad-wrapper.new-user
  .row-fluid.header
    h3
      span(ng-show="curier.edit")
        | Редактировать курьера
      span(ng-hide="curier.edit")
        | Создать курьера
  .row-fluid.form-wrapper
    .span12
      .container
        form.new_user_form.inline-input
          .span12.field-box
            label Имя:
            input.span9(type='text', ng-model='curier.name', name='name')
          .span12.field-box
            label Телефон:
            input.span9(type='text', ng-model='curier.phone', name='phone')
          .span11.field-box.actions
            input.btn-glow.primary(type='button', value='Сохранить', ng-click='editCurier()')
            span или
            input.reset(type='reset', value='Отменить')